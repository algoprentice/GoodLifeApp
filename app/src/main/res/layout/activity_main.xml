<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/eff_big"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="2"
        android:background="@color/myBackgroundColor"
        android:gravity="bottom|center"
        android:text="0%"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/count_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timer_big"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="2"
        android:background="@color/myBackgroundColor"
        android:gravity="top|center"
        android:text="00:00:00"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="0.1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/myBackgroundColor"
                android:gravity="center"
                android:text="Your Efficiency"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lstreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/myBackgroundColor"
                android:gravity="center"
                android:text="Longest Streak"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cstreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#f3e7f7f5"
                android:gravity="center"
                android:text="Current Streak"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/myBackgroundColor"
                android:gravity="center"
                android:text="Timer"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/challenge_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/myBackgroundColor"
                android:gravity="center"
                android:text="Time Since You Challenge Yourself"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/myBackgroundColor"
                android:gravity="center"
                android:text="Current Loss"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/fap_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Busted!!"
        android:textColor="@android:color/white"
        android:background="@drawable/button_effect"
        android:onClick="onClickingBustedButton"
        />
</LinearLayout>